# Storage
CLAWDBOT_DB_PATH=./data/clawdbot.sqlite

# Alerts (optional)
# Telegram:
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord webhook (optional)
DISCORD_WEBHOOK_URL=

# TikTok collector (optional)
# Default is seed/mock data.
# To use the Playwright-based collector:
#   TIKTOK_COLLECTOR=playwright
#   TIKTOK_HEADLESS=0
#   TIKTOK_SCAN_VIDEOS=10
#   TIKTOK_SCROLLS=6
#   TIKTOK_LOCALE=en
#
# Optional: per-post screenshot capture
#   TIKTOK_SCREENSHOTS=0
#   TIKTOK_SCREENSHOT_COUNT=5
#   TIKTOK_SCREENSHOT_INTERVAL_SEC=3
#
# NOTE: Run `node server.js` and `moondev-clawdbot ingest` from the repo root
# (or set CLAWDBOT_DB_PATH to an absolute path) so the dashboard and CLI use
# the same SQLite file.

# Optional LLM enrichment (OpenAI)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Optional X/Twitter API (placeholder)
X_BEARER_TOKEN=
