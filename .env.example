# Storage
CLAWDBOT_DB_PATH=./data/clawdbot.sqlite

# Alerts (optional)
# Telegram:
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord webhook (optional)
DISCORD_WEBHOOK_URL=

# TikTok collector (optional)
# Default is seed/mock data.
# To use the Playwright-based collector:
#   TIKTOK_COLLECTOR=playwright
#   TIKTOK_HEADLESS=0
#   TIKTOK_SCAN_VIDEOS=10
#   TIKTOK_SCROLLS=6
#   TIKTOK_LOCALE=en
#
# Screenshot capture (Playwright collector)
# Screenshots are ALWAYS captured when using TIKTOK_COLLECTOR=playwright.
#   TIKTOK_SCREENSHOT_COUNT=5
#   TIKTOK_SCREENSHOT_INTERVAL_SEC=3
#
# NOTE: Run `node server.js` and `moondev-clawdbot ingest` from the repo root
# (or set CLAWDBOT_DB_PATH to an absolute path) so the dashboard and CLI use
# the same SQLite file.

# Vision-first enrichment (batch)
# Run via CLI:
#   moondev-clawdbot enrich-vision --provider stub
#   moondev-clawdbot enrich-vision --provider openai
#
# Model name used by provider=openai (optional):
VISION_ENRICH_MODEL=gpt-4o-mini

# Optional OpenAI (only needed for provider=openai; NOT used during ingest runtime)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Optional X/Twitter API (placeholder)
X_BEARER_TOKEN=
